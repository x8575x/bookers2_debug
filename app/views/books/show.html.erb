<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table' style="table-layout:fixed;">


        <tr>
          <td>
            <%= link_to(@book.user) do %>
              <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to @book.title, @book %>
          </td>
          <td>
            <%= @book.body %>
          </td>


          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>

          <td>
            <% if @book.favorited_by?(current_user) %>
              <%= link_to book_favorites_path(@book), class: 'text-danger', method: :delete do %>
                ♥<%= @book.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to book_favorites_path(@book), method: :post do %>
                ♡<%= @book.favorites.count %>
              <% end %>
            <% end %>
          </td>

          <td>
            コメント件数：<%= @book.book_comments.count %>
          </td>
        </tr>
      </table>


      <div>
        <% @book.book_comments.each do |book_comment| %>
          <p>
            <span>
              <%= link_to(@book.user) do %>
                <%= image_tag book_comment.user.get_profile_image, size:'80x80' %><br>
                <%= book_comment.user.name %>
              <% end %>
            </span>
            <span>
              <%= book_comment.comment %>
            </span>
            <span>
              <% if book_comment.user == current_user %>
                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: "btn btn-sm btn-danger", method: :delete %>
              <% end %>
            </span>
          </p>
        <% end %>
      </div>

      <%= form_with model: [@book, @comment] do |f| %>
        <div>
          <%= f.text_area :comment, class: 'form-control book_comment' %>
        </div>
        <div>
          <%= f.submit "送信" %>
        </div>
      <% end %>

    </div>
  </div>
</div>